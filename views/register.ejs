<%- include("partials/header") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 400px; border-radius: 15px;">
        <form class="needs-validation" novalidate action="/register" method="post">
            <div class="text-center mb-4">
                <h2 class="text-primary font-weight-bold">Registrar Nova Conta</h2>
                <p class="text-muted">Crie uma conta para acessar o sistema</p>
            </div>
            <div class="form-group mb-3">
                <label for="inputName" class="form-label font-weight-bold">Nome</label>
                <input type="text" class="form-control" id="inputName" name="name" placeholder="Seu nome" required>
                <div class="invalid-feedback">Por favor, insira seu nome.</div>
            </div>
            <div class="form-group mb-3">
                <label for="inputEmail" class="form-label font-weight-bold">E-mail</label>
                <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Seu e-mail" required>
                <div class="invalid-feedback">Endereço de e-mail inválido.</div>
            </div>
            <div class="form-group mb-3">
                <label for="inputPassword" class="form-label font-weight-bold">Senha</label>
                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Crie uma senha" required minlength="6">
                <div class="invalid-feedback">A senha deve ter pelo menos 6 caracteres.</div>
            </div>
            <button type="submit" class="btn btn-primary btn-block w-100 mt-3" style="border-radius: 30px;">Registrar</button>
            <div class="text-center mt-3">
                <p class="text-muted small">Já possui uma conta? <a href="/login" class="text-primary">Faça login</a></p>
            </div>
        </form>
    </div>
</div>

