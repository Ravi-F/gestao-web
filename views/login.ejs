<%- include('partials/header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-5 shadow-lg" style="width: 400px; border-radius: 15px;">
        <form action="/login" method="post">
            <div class="text-center">
                <h2 class="font-weight-bold text-primary">GestÃ£o Web</h2>
            </div>

            <% if(message) { %>
            <div class="alert alert-danger text-center mt-3" role="alert">
                <%= message %>
            </div>
            <% } %>

            <div class="mt-4">
                <label for="inputEmail" class="form-label font-weight-bold">E-mail</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-primary text-white"><i class="fas fa-envelope"></i></span>
                    </div>
                    <input id="inputEmail" type="email" class="form-control" name="email" placeholder="Digite seu e-mail" aria-describedby="emailHelp" required>
                </div>
            </div>

            <div class="mt-4">
                <label for="inputPassword" class="form-label font-weight-bold">Senha</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-primary text-white"><i class="fas fa-lock"></i></span>
                    </div>
                    <input id="inputPassword" type="password" class="form-control" name="password" placeholder="Digite sua senha" required>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <a href="/register" class="text-muted small">Registrar</a>
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-4" style="border-radius: 30px;">Entrar</button>
        </form>
    </div>
</div>
